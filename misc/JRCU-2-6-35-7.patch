+static void rcu_delimit_batches(void)
+{
+       unsigned long flags;
+       struct rcu_list pending;
+
+       rcu_list_init(&pending);
+       rcu_stats.npasses++;
+
+       local_irq_save(flags);
+       smp_rmb();
+       __rcu_delimit_batches(&pending);
+       smp_wmb();
+       local_irq_restore(flags);
+
+       if (pending.head)
+               rcu_invoke_callbacks(&pending);
+}
