+static int jrcu_set_priority(int priority)
+{
+       struct sched_param param;
+
+       if (priority == 0) {
+               set_user_nice(current, -19);
+               return 0;
+       }
+
+       if (priority < 0)
+               param.sched_priority = MAX_USER_RT_PRIO + priority;
+       else
+               param.sched_priority = priority;
