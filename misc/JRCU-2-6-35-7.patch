+	struct cpu_usage_stat *cpustat = &kstat_this_cpu.cpustat;
+	cputime64_t cputime64 = cputime_to_cputime64(cputime);
+	struct rq *rq = this_rq();
+#ifndef CONFIG_SCHEDSTATS
+	struct task_struct *g, *p;
+#endif
