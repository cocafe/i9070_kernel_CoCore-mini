+static long __sched
+wait_for_common(struct completion *x, long timeout, int state, int iowait)
+{
+	might_sleep();
+
+	spin_lock_irq(&x->wait.lock);
+	timeout = do_wait_for_common(x, timeout, state, iowait);
+	spin_unlock_irq(&x->wait.lock);
+	return timeout;
+}
