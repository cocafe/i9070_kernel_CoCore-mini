+int rcu_nmi_seen __read_mostly;
+
+static int rcu_wdog_ctr;       /* time since last end-of-batch, in usecs */
+static int rcu_wdog_lim = 10 * USEC_PER_SEC;   /* rcu watchdog interval */
+
+/*
