+static noinline int init_post(void)
+	__releases(kernel_lock)
+{
+	/* need to finish all async __init code before freeing the memory */
+	async_synchronize_full();
+	boottime_deactivate();
+	free_initmem();
+	unlock_kernel();
+	mark_rodata_ro();
+	system_state = SYSTEM_RUNNING;
+	numa_default_policy();
